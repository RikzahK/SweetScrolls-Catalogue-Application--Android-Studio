<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity2"

    android:background="#FFB300">
    <TextView
    android:layout_width="385dp"
    android:layout_marginTop="18dp"
    android:layout_marginLeft="12dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:paddingLeft="20dp"
    android:textSize="24sp"
    android:text="Introducing:\nThe Spring Recipe Catalogue" />

<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">
    <TextView
        android:background="@color/white"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:paddingTop="4dp"
        android:hint="  Search New Recipe"
        android:textSize="20sp"
        android:drawableStart="@drawable/baseline_search_24"/>
</androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="20sp"
        android:layout_marginLeft="30dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:onClick="categoryitem"
                    android:src="@drawable/bread"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="10dp"
                    android:onClick="categoryitem"
                    android:src="@drawable/bf"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="10dp"
                    android:onClick="categoryitem"
                    android:src="@drawable/chckn"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest Recipe:"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"/>

<HorizontalScrollView
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbarSize="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:background="#FFB300"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/pancakebtn"
            android:layout_width="270dp"
            android:layout_height="340dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/pancake"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/pizzabtn"
            android:layout_width="270dp"
            android:layout_height="340dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/pizza"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/burgerbtn"
            android:layout_width="270dp"
            android:layout_height="340dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/burger" />
        <ImageButton
            android:id="@+id/salmonbtn"
            android:layout_width="270dp"
            android:layout_height="340dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/salmon"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</HorizontalScrollView>


</LinearLayout>